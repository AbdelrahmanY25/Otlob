@inject SignInManager<ApplicationUser> SignInManager

@{
    string? userImageProfile = User.FindFirstValue(SD.userImageProfile);
    bool isUserLogedIn = SignInManager.IsSignedIn(User);
}

<style>
    .menu-container {
        position: relative;
        padding: 10px 20px;
        z-index: 1100;
    }

    .burger-icon {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        width: 30px;
        height: 22px;
        cursor: pointer;
    }

    .burger-icon span {
        display: block;
        height: 3px;
        width: 100%;
        background-color: #C02810;
        border-radius: 2px;
        transition: all 0.3s ease;
    }

    .dropdown-menu {
        display: none;
        position: absolute;
        top: 45px;
        right: 0;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        padding: 10px 0;
        min-width: 220px;
        list-style: none;
        z-index: 999;
    }

    .dropdown-menu.show {
        display: block;
    }

    .dropdown-menu li {
        text-align: left;
        padding: 0;
        margin: 0;
    }

    .dropdown-menu li a {
        display: block;
        padding: 10px 20px;
        color: #333;
        text-decoration: none;
        transition: background-color 0.2s ease;
        border-radius: 5px;
    }

    .dropdown-menu li a:hover {
        background-color: #F04335;
        color: white;
    }

    .dropdown-menu li img {
        display: block;
        margin: 0 auto 10px auto;
        width: 60px;
        height: 60px;
        object-fit: cover;
        border-radius: 50%;
        border: 2px solid #F04335;
    }

    /* Responsive for small screens */
    @@media (max-width: 480px) {
        .dropdown-menu {
            width: 100%;
            right: 0;
            left: 0;
            border-radius: 0;
            box-shadow: none;
        }

        .dropdown-menu li a {
            padding: 12px;
            text-align: center;
        }
    }

</style>

<div class="menu-container">
    <div class="burger-icon" onclick="toggleMenu()">
        <span></span>
        <span></span>
        <span></span>
    </div>

    <ul class="dropdown-menu" id="menu">
        @if (isUserLogedIn)
        {
            <li class="nav-item">
                <img class="avatar rounded-circle" alt="Profile Picture" src="/images/@(userImageProfile is not null ? userImageProfile : "Default.jpg")" />
            </li>        
            @if (User.FindFirstValue(ClaimTypes.Role) == SD.restaurantAdmin)
            {
                <li><a asp-area="@SD.restaurantAdmin" asp-controller="RestaurantProfile" asp-action="EditRestaurantProfile">Your Restaurant Profile</a></li>
            }            
            else if (User.FindFirstValue(ClaimTypes.Role) == SD.customer)
            {
                <li><a asp-area="@SD.customer" asp-controller="Complaint" asp-action="AddComplaint">Add Complaint</a></li> 
            }

            <li><a asp-area=@SD.customer asp-controller="UserProfile" asp-action="UserProfile">Welcome @(User.Identity!.Name)</a></li>
            <li><a asp-area=@SD.customer asp-controller="Account" asp-action="Logout">Logout</a></li>
        }
        else
        {
            <li><a asp-area=@SD.customer asp-controller="Account" asp-action="Register">Register</a></li>
            <li><a asp-area=@SD.customer asp-controller="Account" asp-action="Login">Login</a></li>
        }
    </ul>
</div>

<script>
    document.addEventListener("click", function (e) {
        const menu = document.getElementById("menu");
        const burger = document.querySelector(".burger-icon");
        if (!menu.contains(e.target) && !burger.contains(e.target)) {
            menu.classList.remove("show");
        }
    });

    function toggleMenu() {
        const menu = document.getElementById("menu");
        menu.classList.toggle("show");
    }
</script>
