@if (User.IsInRole(DefaultRoles.SuperAdmin))
{
    <link href="~/css/adminSite.css" rel="stylesheet" />

    <div class="adm-sidebar-container">
        <nav class="adm-sidebar">
            <header>
                <div class="image-text">
                    <span class="image">
                        @* Assuming logo exists, similar to existing one or just Otlob text *@
                        <img src="~/images/Logo/otlob-logo.svg" alt="Otlob">
                    </span>

                    <div class="text header-text">
                        <span class="name">Otlob</span>
                        <span class="role">Control Panel</span>
                    </div>
                </div>

                <i class="bi bi-chevron-right toggle"></i>
            </header>

            <div class="adm-menu-bar">
                <div class="menu">
                    <ul class="adm-menu-links">
                        
                        <!-- Dashboard -->
                        <li class="adm-nav-link">
                            <a asp-area="SuperAdmin" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-grid-1x2-fill icon"></i>
                                <span class="text nav-text">Dashboard</span>
                            </a>
                        </li>

                        <!-- General Analytics -->
                        <li class="adm-nav-link">
                            <a asp-area="SuperAdmin" asp-controller="Home" asp-action="GeneralAnalytics">
                                <i class="bi bi-graph-up-arrow icon"></i>
                                <span class="text nav-text">General Analytics</span>
                            </a>
                        </li>

                        <!-- Restaurants Analytics -->
                        <li class="adm-nav-link">
                            <a asp-area="SuperAdmin" asp-controller="RestaurantsAnalytics" asp-action="Index">
                                <i class="bi bi-bar-chart-line icon"></i>
                                <span class="text nav-text">Restaurants Analytics</span>
                            </a>
                        </li>

                        <!-- Users -->
                        <li class="adm-dropdown">
                            <div class="adm-nav-link adm-dropdown-toggle">
                                <a href="javascript:void(0)">
                                    <i class="bi bi-people icon"></i>
                                    <span class="text nav-text">Users</span>
                                    <i class="bi bi-chevron-down icon chevron"></i>
                                </a>
                            </div>
                            <ul class="adm-submenu">
                                <li class="adm-nav-link">
                                    <a asp-area="SuperAdmin" asp-controller="UsersAnalysis" asp-action="Index">
                                        <i class="bi bi-graph-up icon"></i>
                                        <span class="text nav-text">Users Analytics</span>
                                    </a>
                                </li>
                                <li class="adm-nav-link">
                                    <a asp-area="SuperAdmin" asp-controller="Users" asp-action="Customers">
                                        <i class="bi bi-people-fill icon"></i>
                                        <span class="text nav-text">Customers Management</span>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- Restaurants Dropdown -->
                        <li class="adm-dropdown">
                            <div class="adm-nav-link adm-dropdown-toggle">
                                <a href="javascript:void(0)">
                                    <i class="bi bi-shop icon"></i>
                                    <span class="text nav-text">Restaurants</span>
                                    <i class="bi bi-chevron-down icon chevron"></i>
                                </a>
                            </div>
                            <ul class="adm-submenu">
                                <li class="adm-nav-link">
                                    <a asp-area="SuperAdmin" asp-controller="Restaurants" asp-action="Active">
                                        <i class="bi bi-check-circle icon"></i>
                                        <span class="text nav-text">Active</span>
                                    </a>
                                </li>
                                <li class="adm-nav-link">
                                    <a asp-area="SuperAdmin" asp-controller="Restaurants" asp-action="UnAccepted">
                                        <i class="bi bi-hourglass-split icon"></i>
                                        <span class="text nav-text">New Requests</span>
                                    </a>
                                </li>
                                <li class="adm-nav-link">
                                    <a asp-area="SuperAdmin" asp-controller="Restaurants" asp-action="Deleted">
                                        <i class="bi bi-trash icon"></i>
                                        <span class="text nav-text">Deleted</span>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- Promo Codes -->
                        <li class="adm-nav-link">
                            <a asp-area="SuperAdmin" asp-controller="PromoCodes" asp-action="Index">
                                <i class="bi bi-ticket-perforated icon"></i>
                                <span class="text nav-text">Promo Codes</span>
                            </a>
                        </li>

                    </ul>
                </div>

                <div class="adm-bottom-content">
                    <div class="adm-user-profile">
                        @{
                            string? userImage = User.FindFirst("UserImageProfile")?.Value;
                            string userName = User.Identity?.Name ?? "Admin";
                        }
                        @* Assuming a default image if null *@
                        <img src="~/images/@(userImage ?? "default-user.png")" alt="Profile">
                        <div class="adm-user-details">
                            <span class="adm-user-name">@userName</span>
                            <span class="adm-user-role">Super Admin</span>
                        </div>
                    </div>

                    <li class="adm-mode">
                        <div class="sun-moon">
                            <i class="bi bi-moon moon icon"></i>
                            <i class="bi bi-sun sun icon"></i>
                        </div>
                        <span class="mode-text text adm-mode-text">Dark Mode</span>

                        <div class="adm-toggle-switch">
                            <span class="adm-switch"></span>
                        </div>
                    </li>
                </div>
            </div>
        </nav>
    </div>

    <script src="~/js/adminSite.js" asp-append-version="true"></script>
}