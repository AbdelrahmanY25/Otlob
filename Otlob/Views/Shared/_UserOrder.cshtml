@model ApplicationUser

<div class="text">
    @if (Model?.Image != null)
    {
        <img class="avatar rounded-circle" alt="Profile Picture" src="data:image/*;base64,@(Convert.ToBase64String(Model.Image))" />
    }
    else 
    {
        <img class="avatar rounded-circle" src="~/images/Default.jpg" alt="Customer Profile Picture" />
    }

    <strong>Customer:</strong> @Model?.UserName
    <p><strong>Phone:</strong> @Model?.PhoneNumber</p>
    <p><strong>Email:</strong> @Model?.Email</p>
    
    <hr />
</div>