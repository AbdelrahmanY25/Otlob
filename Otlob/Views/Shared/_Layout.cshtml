<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <title>@ViewData["Title"] - Otlob</title>

        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/Otlob.styles.css" asp-append-version="true" />
        <link href="~/css/newSite.css" rel="stylesheet" asp-append-version="true" /> 
        <link href="~/css/adminSite.css" rel="stylesheet" asp-append-version="true" /> 
       
        @await RenderSectionAsync("Profile", required: false)
        
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">       
    </head>
    <body class="@(User.IsInRole(DefaultRoles.SuperAdmin) || User.IsInRole(DefaultRoles.RestaurantAdmin) ? "admin-context" : "")">               
        <div class="page">
		    <partial name="_SuperAdminSidebarPartial" />
		    <partial name="_RestaurantAdminSidebarPartila" />

            <div class="content">
                <div class="navbar">
				    <partial name="_NavBarPartial"/>
                </div>
                <div class="main">
                    <partial name="_NotificationPartial" />
                    @RenderBody()
                </div>
            </div>
        </div>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
