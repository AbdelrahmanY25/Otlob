<link href="~/css/homepage.css" rel="stylesheet" asp-append-version="true" />
<link href="~/css/newSite.css" rel="stylesheet" asp-append-version="true" />

<div class="mainSection">
    <!-- HERO SECTION: Customer Focus -->
    <section class="hero-section">
        <div class="hero-content">
            <h1 class="hero-title">Don't Wait, Just Otlob</h1>
            <p class="hero-subtitle">Order food from the best restaurants near you, delivered fast.</p>
            
            <div class="search-container">
                <button class="location-btn" onclick="getCurrentLocation()" title="Use current location">
                    <i class="bi bi-crosshair"></i>
                </button>
                <input type="text" id="searchInput" class="search-input" placeholder="Search for area, street name, landmark..." onkeyup="searchAddress()">
                <button type="button" class="search-btn" onclick="handleGoButtonClick()">Let's Go</button>
                
                <div id="results" class="results"></div>
            </div>
        </div>
    </section>

    <!-- MAIN CONTENT -->
    <section class="main-content">
        <div class="container">
            
            <!-- BUSINESS PARTNER SECTION: High Visibility -->
            <div class="partner-cta-section">
                <div class="partner-content-box">
                    <h2>Become a Partner</h2>
                    <p>Join our network of restaurant partners and reach thousands of hungry customers. Grow your business with our proven delivery platform.</p>
                    <a asp-area="@DefaultRoles.Customer" asp-controller="BecomeAPartner" asp-action="BecomeAPartner" class="btn-primary-solid">Register Your Restaurant</a>
                </div>
                <div class="partner-bg-image"></div>
            </div>

            <!-- CONSUMER SECTIONS: Grid -->
            <div class="section-grid">
                <!-- Card 1 -->
                <a href="javascript:void(0)" onclick="handleQuickNavigation()" class="promo-card">
                    <div class="promo-image">
                        <img src="~/images/landing/food.jpg" alt="Enjoy Food" />
                    </div>
                    <div class="promo-content">
                        <h3 class="promo-title">Enjoy with Family & Friends</h3>
                        <p class="promo-desc">We deliver happiness and the best dining experience directly to you.</p>
                        <span class="promo-link">Order Now <i class="fas fa-arrow-right"></i></span>
                    </div>
                </a>

                <!-- Card 2 -->
                <a href="javascript:void(0)" onclick="handleQuickNavigation()" class="promo-card">
                    <div class="promo-image">
                        <img src="~/images/landing/pexels-chanwalrus-958545.jpg" alt="Wide Selection" />
                    </div>
                    <div class="promo-content">
                        <h3 class="promo-title">Explore Cuisines</h3>
                        <p class="promo-desc">We're proud to offer a wide selection of cuisines from around the world.</p>
                        <span class="promo-link">View Menu <i class="fas fa-arrow-right"></i></span>
                    </div>
                </a>
            </div>

        </div>
    </section>

    <!-- FEATURES SECTION -->
    <section class="features-section">
        <div class="container">
            <h2 class="features-title">Why Choose Otlob?</h2>
            <div class="features-grid">
                <div class="feature-item">
                    <div class="feature-icon-circle">⚡</div>
                    <h3>Fast Delivery</h3>
                    <p>Get your food delivered in 30 minutes or less with our optimized fleet.</p>
                </div>
                <div class="feature-item">
                    <div class="feature-icon-circle">🏆</div>
                    <h3>Quality Assured</h3>
                    <p>We partner with only the best restaurants to ensure high quality.</p>
                </div>
                <div class="feature-item">
                    <div class="feature-icon-circle">💳</div>
                    <h3>Easy Payment</h3>
                    <p>Multiple secure payment options including cash, credit, and wallets.</p>
                </div>
                <div class="feature-item">
                    <div class="feature-icon-circle">📱</div>
                    <h3>Track Orders</h3>
                    <p>Real-time order tracking from the kitchen to your doorstep.</p>
                </div>
            </div>
        </div>
    </section>

    <partial name="_footerPartial"></partial>
</div>

<script src="https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.js"></script>
<script src="~/js/homePage.js" asp-append-version="true"></script>