@if (TempData["Error"] != null)
{
    <div class="alert alert-danger" style="margin-bottom: 20px; border-radius: 12px; background:#fff5f5; border:1px solid #fed7d7; color:#c53030; padding: 12px;">
        @TempData["Error"]
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success" style="margin-bottom: 20px; border-radius: 12px; background:#f0fff4; border:1px solid #c6f6d5; color:#2f855a; padding: 12px;">
        @TempData["Success"]
    </div>
}