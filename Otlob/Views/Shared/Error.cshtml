@model ErrorViewModel

@{
    ViewData["Title"] = "Error";
}

<style>
    .error-container {
        text-align: center;
        max-width: 600px;
        padding: 2rem;
        margin: 0 auto;
        position: relative;
        z-index: 2;
    }

    .error-illustration {
        margin-bottom: 2rem;
        animation: float 3s ease-in-out infinite;        
    }    

    .error-illustration img {
        width: 300px;
        height: 300px;
    }

    .error-title {
        font-size: 2rem;
        font-weight: 700;
        color: var(--primary-color);
        margin-bottom: 1rem;
    }

    .error-message {
        font-size: 1.2rem;
        color: #6c757d;
        margin-bottom: 2rem;
        line-height: 1.6;
    }

    .action-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn {
        padding: 12px 24px;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-secondary {
        background: white;
        color: var(--primary-color);
        border: 2px solid var(--secondary-color);
    }

    .btn-secondary:hover {
        background: var(--secondary-color);
        color: white;
        transform: translateY(-2px);
    }    
</style>

<div class="error-container">
    <div class="error-illustration">
        <img src="~/Illustrations/500 Internal Server Error-cuate.svg" alt="Alternate Text" />
    </div>

    <h1 class="error-title">Internal Server Error</h1>

    <p class="error-message">
        Oops! Something went wrong on our end. Our server encountered an unexpected condition that prevented it from fulfilling your request. Don't worry, our team has been notified and is working to fix this issue.
    </p>

    <div class="action-buttons">
        <a href="/" class="btn btn-secondary">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                <path d="M10,20V14H14V20H19V12H22L12,3L2,12H5V20H10Z" />
            </svg>
            Go Home
        </a>
    </div>
</div>
