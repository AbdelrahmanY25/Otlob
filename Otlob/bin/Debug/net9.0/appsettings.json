{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "D:\\My_Projects\\Back End C# Asp .Net\\Logs\\OtlobMVCLogs\\logs-.json",
          "rollingInterval": "Day",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"],
    "Properties": {
      "Application": "Otlob"
    }
  },
  "MailSettings": {
    "Email": "justotlob@gmail.com",
    "DisplayName": "Otlob",
    "Host": "smtp.gmail.com",
    "Port": 465
  }
}