@model OrderDetailsViewModel

<a class="btn btn-warning" href="/ResturantAdmin/Orders/@(Model.OrderStatus == OrderStatus.Delivered ? "DeliveredOrders" : "Index")">Back to resturant orders</a>

<h3 class="mt-3">Order Summary</h3>

<table class="table table-bordered table-striped dt-responsive nowrap">
    <thead>
        <tr class="text-center">
            <th>
                Meal
            </th>
            <th>Price</th>
            <th>
                Quantity
            </th>
            <th>
                Total Price
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Meals)
        {
            <tr>
                <td>
                    <img alt="MealLogo" class="avatar rounded-circle" src="data:image/*;base64,@(Convert.ToBase64String(item.Meal.Image))" />
                    @Html.DisplayFor(modelItem => item.Meal.Name)
                </td>
                <td class="text-center">
                    @item.MealPrice L.E
                </td>
                <td class="text-center text-success">
                    X @Html.DisplayFor(modelItem => item.MealQuantity)
                </td>
                <td class="text-center">
                    @item.TotalPrice L.E
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    PaymentMethod : @Model.PaymentMethod
</div>

<div class="text-center">
    Sub Price : @Model.SubPrice.ToString("0.00") L.E <br />
    DeliveryFee : @Model.DeliveryFee.ToString("0.00") L.E <br />
    Total Price : @(Model.TotalPrice.ToString("0.00")) L.E
</div>