@model IQueryable<MealVm>

@inject IEncryptionService encryptionService

@section Notify {
    <partial name="_NotificationPartial"></partial>
}

<table class="table">
    <thead>
        <tr>
            <th>
                Logo
            </th>
            <th>
                Meal Name
            </th>
            <th>
                Meal Price
            </th>
            <th>
                More Details
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var encryptedMealId = encryptionService.EncryptId(item.MealVmId);

            <tr>
                <td>
                    @if (item.Image is not null)
                    {
                        <img alt="MealLogo" class="avatar rounded-circle" src="data:image/*;base64,@(Convert.ToBase64String(item.Image))" />
                    }
                    else
                    {
                        <img src="~/images/Default.jpg" alt="resturantLogo" class="avatar rounded-circle">
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a class="btn btn-success" asp-action="MealDetails" asp-route-id="@encryptedMealId">Meal Details</a>
                    <a class="btn btn-primary" asp-action="MealPriceHistoryDetails" asp-route-id="@encryptedMealId">Meal Price History</a>
                    <a class="btn btn-danger" asp-action="UnDeleteMeal" asp-route-id="@encryptedMealId">UnDelete Meal</a>
                </td>
            </tr>
        }
    </tbody>
</table>