@model IEnumerable<RepositoryPatternWithUOW.Core.Models.Restaurant>
@section Notify {
    <partial name="_NotificationPartial"></partial>
}

<div class="articles" id="articles">
    <div class="container">
        @foreach (var item in Model)
        {
            <div class="card">
                <div class="image">
                    @if (item.Logo is not null)
                    {
                        <img src="~/images/resturantLogo/@item.Logo" alt="resturantLogo">
                    }
                    else
                    {
                        <img src="~/images/Default.jpg" alt="resturantLogo">
                    }
                </div>            
                <div class="text">
                    <h3>@item.Name</h3>
                </div>
                <div class="read">
                    <a class="btn btn-warning" asp-controller="Resturants" asp-action="ResturantDetails" asp-route-id="@item.Id">More Details</a>
                </div>
            </div>
        }
    </div>
</div>
