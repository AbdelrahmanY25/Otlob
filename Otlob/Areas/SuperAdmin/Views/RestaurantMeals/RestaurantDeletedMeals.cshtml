@model IQueryable<MealVm>

@inject IEncryptionService encryptionService

@section Notify {
    <partial name="_NotificationPartial"></partial>
}

<table class="table">
    <thead>
        <tr>
            <th>
                Logo
            </th>
            <th>
                Meal Name
            </th>
            <th>
                Meal Price
            </th>
            <th>
                More Details
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var encryptedId = encryptionService.EncryptId(item.MealVmId);
            <tr>
                <td>
                    <img class="avatar rounded-circle" alt="MealLogo" src="data:image/*;base64,@(Convert.ToBase64String(item.Image))" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a class="btn btn-success" asp-action="MealDetails" asp-route-id="@encryptedId">Meal Details</a>
                    <a class="btn btn-primary" asp-action="MealPriceHistoryDetails" asp-route-id="@encryptedId">Meal Price History</a>
                    <a class="btn btn-danger" asp-action="UnDeleteMeal" asp-route-id="@encryptedId">UnDelete Meal</a>                    
                </td>
            </tr>
        }
    </tbody>
</table>