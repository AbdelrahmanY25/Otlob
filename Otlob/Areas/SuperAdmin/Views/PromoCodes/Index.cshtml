@model IEnumerable<PromoCodeResponse>

@{
    ViewData["Title"] = "Promo Codes Management";
    var filter = ViewBag.Filter as string ?? "all";
    var restaurants = ViewBag.Restaurants;
    
    var totalCodes = Model.Count();
    var activeCodes = Model.Count(p => p.IsActive && !p.IsExpired);
    var expiredCodes = Model.Count(p => p.IsExpired);
    var inactiveCodes = Model.Count(p => !p.IsActive);
}

<link rel="stylesheet" href="~/css/promoCodes.css" asp-append-version="true" />

<div class="promo-dashboard">
    <div class="promo-header">
        <div class="promo-header-content">
            <div>
                <h1 class="promo-title">
                    <i class="bi bi-ticket-perforated-fill"></i>
                    Promo Codes Management
                </h1>
                <p class="promo-subtitle">Create and manage global & restaurant promotional codes</p>
            </div>
            <a asp-action="Create" class="promo-btn promo-btn-primary">
                <i class="bi bi-plus-lg"></i>
                Create Global Code
            </a>
        </div>
    </div>

    <div class="promo-stats-grid">
        <div class="promo-stat-card total">
            <div class="promo-stat-icon">
                <i class="bi bi-collection"></i>
            </div>
            <p class="promo-stat-label">Total Codes</p>
            <h3 class="promo-stat-value">@totalCodes</h3>
        </div>
        <div class="promo-stat-card active">
            <div class="promo-stat-icon">
                <i class="bi bi-check-circle"></i>
            </div>
            <p class="promo-stat-label">Active</p>
            <h3 class="promo-stat-value">@activeCodes</h3>
        </div>
        <div class="promo-stat-card expired">
            <div class="promo-stat-icon">
                <i class="bi bi-clock-history"></i>
            </div>
            <p class="promo-stat-label">Expired</p>
            <h3 class="promo-stat-value">@expiredCodes</h3>
        </div>
        <div class="promo-stat-card inactive">
            <div class="promo-stat-icon">
                <i class="bi bi-pause-circle"></i>
            </div>
            <p class="promo-stat-label">Inactive</p>
            <h3 class="promo-stat-value">@inactiveCodes</h3>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="promo-filter-card">
        <div class="promo-filter-row">
            <div class="promo-filter-group">
                <label class="promo-filter-label">Filter by Type</label>
                <div class="promo-filter-buttons">
                    <a asp-action="Index" class="promo-filter-btn @(filter == "all" ? "active" : "")">
                        <i class="bi bi-grid-3x3-gap me-1"></i> All Codes
                    </a>
                    <a asp-action="Index" asp-route-filter="global" class="promo-filter-btn @(filter == "global" ? "active" : "")">
                        <i class="bi bi-globe me-1"></i> Global Only
                    </a>
                </div>
            </div>
            <div class="promo-filter-group">
                <label class="promo-filter-label">Filter by Restaurant</label>
                <select class="promo-select" onchange="if(this.value) window.location.href='@Url.Action("Index")' + '?filter=' + this.value; else window.location.href='@Url.Action("Index")';">
                    <option value="">-- All Restaurants --</option>
                    @if (restaurants != null)
                    {
                        @foreach (var r in restaurants)
                        {
                            var isSelected = filter == r.Value;
                            <option value="@r.Value" selected="@isSelected">@r.Text</option>
                        }
                    }
                </select>
            </div>
        </div>
    </div>

    <!-- Promo Codes Table -->
    <div class="promo-table-card">
        <div class="promo-table-header">
            <h3 class="promo-table-title">
                <i class="bi bi-list-ul me-2"></i>All Promo Codes
            </h3>
            <span class="promo-table-count">@totalCodes codes</span>
        </div>

        @if (Model.Any())
        {
            <table class="promo-table">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Discount</th>
                        <th>Type</th>
                        <th>Valid Period</th>
                        <th>Usage</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var promo in Model)
                    {
                        var usagePercent = promo.MaxTotalUsage.HasValue 
                            ? Math.Min((promo.TotalUsageCount * 100.0 / promo.MaxTotalUsage.Value), 100) 
                            : 0;
                        
                        <tr>
                            <td>
                                <div class="promo-code-cell">
                                    <span class="promo-code-value">@promo.Code</span>
                                    @if (promo.RestaurantId == null)
                                    {
                                        <span class="promo-code-badge global">Global</span>
                                    }
                                    else
                                    {
                                        <span class="promo-code-restaurant">@promo.RestaurantName</span>
                                    }
                                </div>
                            </td>
                            <td>
                                <span class="promo-discount">@promo.DiscountDisplay</span>
                                @if (promo.MaxDiscountAmount.HasValue)
                                {
                                    <div class="promo-max-discount">Max: @promo.MaxDiscountAmount.Value.ToString("N0") L.E</div>
                                }
                            </td>
                            <td>
                                @if (promo.IsFirstOrderOnly)
                                {
                                    <span class="promo-type-badge first-order">
                                        <i class="bi bi-star-fill me-1"></i>First Order
                                    </span>
                                }
                                else
                                {
                                    <span class="promo-type-badge regular">Regular</span>
                                }
                            </td>
                            <td>
                                <div class="promo-date-range">
                                    <span class="promo-date">@promo.ValidFrom.ToString("dd MMM yyyy")</span>
                                    <span class="promo-date-label">to</span>
                                    <span class="promo-date">@promo.ValidTo.ToString("dd MMM yyyy")</span>
                                </div>
                            </td>
                            <td>
                                <div class="promo-usage">
                                    @if (promo.MaxTotalUsage.HasValue)
                                    {
                                        <div class="promo-usage-bar">
                                            <div class="promo-usage-fill" style="width: @usagePercent%"></div>
                                        </div>
                                    }
                                    <span class="promo-usage-text">@promo.TotalUsageCount / @(promo.MaxTotalUsage?.ToString() ?? "âˆž")</span>
                                </div>
                            </td>
                            <td>
                                @{
                                    var statusClass = promo.Status.ToLower();
                                }
                                <span class="promo-status @statusClass">@promo.Status</span>
                            </td>
                            <td>
                                <div class="promo-actions">
                                    <a asp-action="Details" asp-route-id="@promo.Id" class="promo-action-btn view" title="View Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@promo.Id" class="promo-action-btn edit" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    @if (promo.IsActive)
                                    {
                                        <form asp-action="Deactivate" asp-route-id="@promo.Id" method="post" style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="promo-action-btn deactivate" title="Deactivate" 
                                                onclick="return confirm('Are you sure you want to deactivate this promo code?')">
                                                <i class="bi bi-pause-circle"></i>
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form asp-action="Activate" asp-route-id="@promo.Id" method="post" style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="promo-action-btn activate" title="Activate">
                                                <i class="bi bi-play-circle"></i>
                                            </button>
                                        </form>
                                    }
                                    <form asp-action="Delete" asp-route-id="@promo.Id" method="post" style="display:inline;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="promo-action-btn delete" title="Delete" 
                                            onclick="return confirm('Are you sure you want to permanently delete this promo code?')">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="promo-empty">
                <i class="bi bi-ticket-perforated promo-empty-icon"></i>
                <h4 class="promo-empty-title">No Promo Codes Found</h4>
                <p class="promo-empty-text">Create your first promo code to start offering discounts.</p>
                <a asp-action="Create" class="promo-btn promo-btn-primary">
                    <i class="bi bi-plus-lg"></i> Create Promo Code
                </a>
            </div>
        }
    </div>
</div>
