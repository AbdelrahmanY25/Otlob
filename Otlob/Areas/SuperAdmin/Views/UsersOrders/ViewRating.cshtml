@model RatingResponse

@{
    ViewData["Title"] = "Order Rating";
    var userId = ViewBag.UserId as string;
}

<link href="~/css/adminUserOrders.css" rel="stylesheet" asp-append-version="true" />

<div class="admin-rating-page">
    <div class="admin-rating-container">
        <a asp-action="Orders" asp-route-userId="@userId" class="admin-back-link">
            <i class="fas fa-arrow-left"></i> Back to Orders
        </a>

        <div class="admin-rating-card">
            <!-- Header -->
            <div class="admin-rating-header">
                <div class="admin-rating-icon-wrapper">
                    <i class="fas fa-star"></i>
                </div>
                <h1 class="admin-rating-title">Customer Rating</h1>
                <p class="admin-rating-subtitle">Feedback for Order #@Model.OrderId</p>
            </div>

            <!-- Restaurant Info -->
            <div class="admin-rating-restaurant-info">
                @if (!string.IsNullOrEmpty(Model.RestaurantImage))
                {
                    <img src="~/images/@Model.RestaurantImage" alt="@Model.RestaurantName" class="admin-rating-restaurant-image" />
                }
                else
                {
                    <div class="admin-rating-restaurant-image-placeholder">
                        <i class="fas fa-store"></i>
                    </div>
                }
                <div class="admin-rating-restaurant-details">
                    <h3>@Model.RestaurantName</h3>
                    <p><i class="far fa-calendar"></i> @Model.OrderDate.ToString("MMM dd, yyyy 'at' hh:mm tt")</p>
                    <p><i class="fas fa-receipt"></i> Total: @Model.TotalPrice.ToString("N2") L.E</p>
                </div>
            </div>

            <!-- Rating Display -->
            <div class="admin-rating-display-section">
                <h4 class="admin-section-label"><i class="fas fa-thumbs-up"></i> What the customer liked</h4>
                <div class="admin-selected-tags">
                    @if (Model.GoodFood)
                    {
                        <div class="admin-selected-tag">
                            <i class="far fa-smile"></i>
                            <span>Good Food</span>
                        </div>
                    }
                    @if (Model.FastDelivery)
                    {
                        <div class="admin-selected-tag">
                            <i class="fas fa-bolt"></i>
                            <span>Fast Delivery</span>
                        </div>
                    }
                    @if (Model.GreatPacking)
                    {
                        <div class="admin-selected-tag">
                            <i class="fas fa-box"></i>
                            <span>Great Packing</span>
                        </div>
                    }
                    @if (Model.FreshFood)
                    {
                        <div class="admin-selected-tag">
                            <i class="fas fa-leaf"></i>
                            <span>Fresh Food</span>
                        </div>
                    }
                    @if (Model.GoodPortionSize)
                    {
                        <div class="admin-selected-tag">
                            <i class="fas fa-expand-arrows-alt"></i>
                            <span>Good Portion</span>
                        </div>
                    }
                    @if (Model.FriendlyDelivery)
                    {
                        <div class="admin-selected-tag">
                            <i class="fas fa-user-friends"></i>
                            <span>Friendly Delivery</span>
                        </div>
                    }
                    @if (Model.WorthThePrice)
                    {
                        <div class="admin-selected-tag">
                            <i class="fas fa-coins"></i>
                            <span>Worth The Price</span>
                        </div>
                    }
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Comment))
            {
                <div class="admin-comment-display-section">
                    <h4 class="admin-section-label"><i class="fas fa-comment"></i> Customer Comment</h4>
                    <div class="admin-comment-display">
                        <p>@Model.Comment</p>
                    </div>
                </div>
            }

            <div class="admin-rating-meta">
                <p><i class="far fa-clock"></i> Rated on @Model.RatedAt?.ToString("MMMM dd, yyyy 'at' hh:mm tt")</p>
            </div>

            <div class="admin-form-actions">
                <a asp-action="OrderDetails" asp-route-id="@Model.OrderId" asp-route-userId="@userId" class="admin-btn-primary">
                    <i class="fas fa-arrow-left"></i> Back to Order Details
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/adminUserOrders.js" asp-append-version="true"></script>
}
