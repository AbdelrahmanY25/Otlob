@model IQueryable<RestaurantVM>

<div class="articles" id="articles">
    <div class="container">
        @foreach (var item in Model)
        {
            <div class="card">
                <div class="image">
                    <img alt="ResturantLogo" src="/images/@(item.Image is not null ? item.Image : "Default.jpg")" />
                </div>
                <div class="text">
                    <h3>@item.Name</h3>
                </div>
                <div class="read">
                    <a class="btn btn-warning" asp-controller="Restaurants" asp-action="ResturantDetails" asp-route-id="@item.Key">More Details</a>
                </div>
                <div class="read">
                    <a class="btn btn-primary" asp-controller="Restaurants" asp-action="UnDeleteRestaurant" asp-route-id="@item.Key">UnDelete Restaurant</a>
                </div>
            </div>
        }
    </div>
</div>
@section Scripts {
    <partial name="_NotificationPartial"></partial>
}