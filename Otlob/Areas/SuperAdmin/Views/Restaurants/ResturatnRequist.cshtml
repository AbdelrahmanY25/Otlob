@model IQueryable<RestaurantVM>

<div class="articles" id="articles">
    <div class="container">
        @foreach (var item in Model)
        {
            <div class="card">
                <div class="image">
                    @if (item.Image is not null)
                    {
                        <img alt="ResturantLogo" src="@(item.Image is not null ? item.Image : "~/images/Default.jpg")" />
                    }
                    else
                    {
                        <img src="~/images/Default.jpg" alt="resturantLogo">
                    }
                </div>            
                <div class="text">
                    <h3>@item.Name</h3>
                </div>
                <div class="read">
                    <a class="btn btn-warning" asp-controller="Restaurants" asp-action="ResturantDetails" asp-route-id="@item.Key">More Details</a>
                </div>               
            </div>
        }
    </div>
</div>

@section Scripts{
    <partial name="_NotificationPartial"></partial>
}