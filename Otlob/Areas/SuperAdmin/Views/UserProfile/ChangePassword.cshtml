@model ChangePasswordRequest

@{
    ViewData["Title"] = "Change Password";
}

<link href="~/css/adminProfile.css" rel="stylesheet" asp-append-version="true" />

<div class="profile-container">
    <div class="profile-content-card">
        <div class="card-header">
            <h2>Change Password</h2>
        </div>

        <!-- Alert Messages -->
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger" style="margin-bottom: 20px; background-color: #fee2e2; color: #991b1b; padding: 15px; border-radius: 6px; border: 1px solid #fecaca;">
                <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
            </div>
        }

        <form asp-action="ChangePassword" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="profile-form-grid">               
                <div class="form-group full-width">
                    <label asp-for="NewPassword" class="form-label">New Password</label>
                    <div class="input-wrapper">
                        <i class="fas fa-key"></i>
                        <input asp-for="NewPassword" type="password" class="form-input" placeholder="New Password" />
                    </div>
                    <span asp-validation-for="NewPassword" class="validation-error"></span>
                </div>               
            </div>

            <div class="form-actions" style="gap: 10px;">
                <a asp-controller="Users" asp-action="Customers" class="profile-btn" style="background: transparent; border: 1px solid var(--adm-border); color: var(--adm-text-primary); text-decoration: none;">
                    Cancel
                </a>
                <button type="submit" class="profile-btn">
                    <i class="fas fa-save"></i> Update Password
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
