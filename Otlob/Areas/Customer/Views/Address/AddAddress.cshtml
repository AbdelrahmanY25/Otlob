@using Microsoft.AspNetCore.Identity
@using Otlob.Core.Models
@model Otlob.Core.ViewModel.AddressVM

<h4>Address</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddAddress">
            <div asp-validation-summary="All" class="text-danger"></div>           
            <div class="form-group">
                <label asp-for="CustomerAddres" class="control-label">Your New Address</label>
                <input asp-for="CustomerAddres" class="form-control mb-3" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-warning mybtn mt-3" asp-action="SavedAddresses">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
