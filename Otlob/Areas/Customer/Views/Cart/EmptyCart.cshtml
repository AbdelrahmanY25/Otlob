@{
    ViewData["Title"] = "Empty Cart";
}

<link rel="stylesheet" href="~/css/cart.css" />

<div class="empty-cart-page">
    <div class="empty-cart-icon">
        <i class="bi bi-cart3"></i>
    </div>
    
    <h1 class="empty-title">Your Cart is Empty</h1>
    
    <p class="empty-text">
        Looks like you haven't added anything to your cart yet. Discover delicious meals and start ordering!
    </p>
    
    <a asp-controller="Home" asp-action="Index" class="browse-btn">
        <span>Browse Menu</span>
        <i class="bi bi-arrow-right"></i>
    </a>
</div>
