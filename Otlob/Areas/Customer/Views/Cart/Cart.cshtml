@model CartResponse

@{
    ViewData["Title"] = "Shopping Cart";
}

<link rel="stylesheet" href="~/css/cart.css" />

<div class="cart-page">
    <div class="cart-container">
        <div style="margin-bottom: 20px;">
            <a href="@Url.Action("Index", "Home", new { area = "Customer" })" style="display:inline-flex;align-items:center;gap:8px;color:#6b7280;text-decoration:none;font-weight:600;">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>

        <div class="cart-header">
            <h1 class="cart-title">My Cart</h1>
            <div style="display: flex; align-items: center; gap: 15px;">
                <span class="cart-count" id="cart-count">@Model.CartDetails.Count() items</span>
                <button type="button" 
                        class="btn btn-link text-danger p-0" 
                        style="font-size: 1.2rem; border: none; background: none; cursor: pointer;" 
                        title="Delete Cart"
                        data-bs-toggle="modal" 
                        data-bs-target="#deleteCartModal">
                    <i class="bi bi-trash"></i>
                </button>
            </div>
        </div>

        <div class="cart-items">
            @foreach (var item in Model.CartDetails)
            {
                <div class="cart-item" id="cart-item-@item.Id">
                    @if (!string.IsNullOrEmpty(item.MealImage))
                    {
                        <img src="~/images/@item.MealImage" alt="@item.MealName" class="item-image" />
                    }
                    else
                    {
                        <div class="item-image" style="display:flex;align-items:center;justify-content:center;color:#ccc;">
                            <i class="bi bi-image" style="font-size:2rem;"></i>
                        </div>
                    }

                    <div class="item-content">
                        <span class="item-name">@item.MealName</span>
                        
                        @{
                            string description = "";
                            try {
                                var node = JsonNode.Parse(item.MealDeteils);
                                var opts = node?["items"]?.AsArray().Select(x => x?["Name"]?.GetValue<string>()).Where(s => !string.IsNullOrEmpty(s));
                                var adds = node?["addOns"]?.AsArray().Select(x => x?["Name"]?.GetValue<string>()).Where(s => !string.IsNullOrEmpty(s));
                                
                                var combined = new List<string>();
                                if(opts!=null) combined.AddRange(opts!);
                                if(adds!=null) combined.AddRange(adds!);
                                description = string.Join(", ", combined);
                            } catch {}
                        }
                        
                        @if (!string.IsNullOrWhiteSpace(description))
                        {
                            <p class="item-details">@description</p>
                        }

                        @if (item.TotalPrice > 0)
                        {
                            <div class="item-price" id="item-price-@item.Id">@item.TotalPrice.ToString("N2") L.E</div>
                        }
                    </div>

                    <div class="qty-controls">
                        @if (item.Quantity == 1)
                        {
                            <button type="button" class="qty-btn trash ajax-cart-btn" 
                                    data-action="decrease" 
                                    data-id="@item.Id" 
                                    data-url="@Url.Action("Remove", "Cart", new { area = "Customer", id = item.Id })"
                                    title="Remove Item">
                                <i class="bi bi-trash"></i>
                            </button>
                        }
                        else
                        {
                            <button type="button" class="qty-btn ajax-cart-btn" 
                                    data-action="decrease" 
                                    data-id="@item.Id" 
                                    data-url="@Url.Action("Decrement", "Cart", new { area = "Customer", id = item.Id })"
                                    title="Decrease Quantity">
                                <i class="bi bi-dash"></i>
                            </button>
                        }
                        
                        <span class="qty-val" id="qty-val-@item.Id">@item.Quantity</span>

                        <button type="button" class="qty-btn ajax-cart-btn" 
                                data-action="increase" 
                                data-id="@item.Id" 
                                data-url="@Url.Action("Increment", "Cart", new { area = "Customer", id = item.Id })"
                                title="Increase Quantity">
                            <i class="bi bi-plus"></i>
                        </button>
                    </div>
                    </div>
            }
        </div>

        <div class="cart-summary">
            <div style="display:flex; justify-content:space-between; margin-bottom:10px; font-weight:700; font-size:1.2rem; color:var(--c-text-main);">
                <span>Total</span>
                <span id="cart-total-price">@Model.CartDetails.Sum(x => x.TotalPrice).ToString("N2") L.E</span>
            </div>
            <a asp-controller="CheckOut" asp-action="CheckOut" class="checkout-btn">Proceed to Checkout</a>
        </div>
    </div>
</div>

<!-- Delete Cart Confirmation Modal -->
<div class="modal fade" id="deleteCartModal" tabindex="-1" aria-labelledby="deleteCartModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title" id="deleteCartModalLabel">
                    <i class="bi bi-exclamation-triangle text-danger me-2"></i>Delete Cart
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-0">Are you sure you want to delete the entire cart? This action cannot be undone.</p>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <a href="@Url.Action("Delete", "Cart", new { area = "Customer", cartId = Model.Id })" 
                   class="btn btn-danger">
                    <i class="bi bi-trash me-1"></i>Delete Cart
                </a>
            </div>
        </div>
    </div>
</div>

<script src="@Url.Content("~/js/cart.js")" defer></script>