@{
    ViewData["Title"] = "Email Confirmation";
}

<link href="~/css/passwordConfirmation.css" rel="stylesheet" asp-append-version="true" />

<div class="passwordConfirmationContent">
    <h2>Check Your Email!</h2>
    <img src="~/Illustrations/Mail sent-rafiki.svg" alt="Email Sent" />
    <p>We have sent you an email with a link to confirm your email.</p>
    <a asp-controller="Account" asp-action="ResendEmailConfirmation">Resend email confirmation</a>
</div>

@section Scripts {
    <partial name="_NotificationPartial"></partial>
}