@model ForgetPasswordRequest

@{
    ViewData["Title"] = "Forget Password";
}

<link href="~/css/authForms.css" rel="stylesheet" asp-append-version="true"/>

<div class="auth-wrapper">
    <div class="auth-card">
        <div class="auth-header">
            <a href="/" class="auth-logo">Otlob<span>.</span></a>
            <h1>Reset Password</h1>
            <p>Enter your email address and we'll send you instructions to reset your password.</p>
        </div>

        <form asp-action="ForgetPassword" class="auth-form">
            <div asp-validation-summary="ModelOnly" class="auth-alert auth-alert-error" style="display:none;"></div>

            <div class="auth-form-group">
                <label class="auth-label" asp-for="Email">Email</label>
                <div class="auth-input-container">
                    <input type="email" class="auth-input" asp-for="Email" placeholder="Enter your email address" />
                    <i class="fas fa-envelope auth-input-icon"></i>
                </div>
                <span asp-validation-for="Email" class="auth-input-error"></span>
            </div>

            <button type="submit" class="auth-btn">Send Reset Instructions</button>
        </form>

        <div class="auth-footer">
            <a asp-action="Login" asp-controller="Account" class="auth-link">
                <i class="fas fa-arrow-left"></i> Back to Login
            </a>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
    <partial name="_NotificationPartial"></partial>
}