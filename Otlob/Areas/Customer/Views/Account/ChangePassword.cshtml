@model ChangePasswordVM

@section FormStyle {
    <partial name="_FormStylePartial"></partial>
}

@{
    ViewData["Title"] = "Change Password";
}

<form class="loginform" asp-action="ChangePassword">
    <h2>Change Your Password</h2>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="field">
        <input type="password" asp-for="OldPassword" placeholder="Old Password"/>
    </div>
    <div class="field">
        <input type="password" asp-for="NewPassword" placeholder="New Password" />
    </div>
    <div class="field">
        <input type="password" asp-for="ConfirmNewPassword" placeholder="Confirm new Password" />
    </div>

     <button type="submit">Update</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
}
