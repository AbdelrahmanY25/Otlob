@model LoginVM

@section FormStyle {
    <partial name="_FormStylePartial"></partial>
}

@{
    ViewData["Title"] = "Login";
}

<section class="form-section">
    <img src="~/Illustrations/Computer login-bro.svg"/>

    <form asp-action="Login" class="loginform">
        <h2>Login</h2>
        <div asp-validation-summary="All" class="text-danger text-center"></div>
        <div>
            <input asp-for="Email" placeholder="Email" />
        </div>
        <div>
            <input type="password" asp-for="Password" placeholder="Password" />
        </div>
        <div class="rememberme">
            <input asp-for="RememberMe" />
            <label asp-for="RememberMe"></label>
        </div>
        <a asp-controller="Account" asp-action="Register">Create Account</a>
        <a asp-controller="Account" asp-action="ForgetPassword">Forget Password</a>
        <button type="submit">Login</button>
    </form>
</section>

@section Scripts {
    <partial name="_NotificationPartial"></partial>
    <partial name="_ValidationScriptsPartial"></partial>
}
