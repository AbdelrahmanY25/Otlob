@model ResetPasswordRequest

@{
    ViewData["Title"] = "Reset Password";
}

<link href="~/css/authForms.css" rel="stylesheet" asp-append-version="true" />
<link href="~/css/forgetPassword.css" rel="stylesheet" asp-append-version="true" />

<div class="container">
    <div class="left-panel">
        <div class="logo">Otlob<span>.</span></div>
        <div class="svg-container">
            <img src="~/Illustrations/Reset password-pana.svg" />
        </div>
        <div class="left-content">
            <h2>Reset Your Password</h2>
            <p>Enter your email and the new password twice.</p>
        </div>
    </div>

    <div class="right-panel">
        <div class="welcome-text">
            <h1>Reset Password?</h1>
            <p>Remember your new password well.</p>
        </div>

        <form asp-action="ResetPassword" class="loginform">
            <div asp-validation-summary="ModelOnly"></div>

	        <span asp-validation-for="Token" class="input-error-message"></span>
            <div class="form-group">
                <div class="input-with-icon">
                    <i class="fas fa-lock"></i>
					<input type="hidden" asp-for="Token" />
                    <input type="email" asp-for="Email" placeholder="Enter your email" required>
                </div>
                <span asp-validation-for="Email" class="input-error-message"></span>
            </div>

            <div class="form-group">
                <div class="input-with-icon">
                    <i class="fas fa-lock"></i>
                    <input type="password" id="password" asp-for="NewPassword" placeholder="Enter the new password" required>
                </div>
                <div id="password-strength-meter">
                    <div class="password-progress-container">
                        <div id="password-strength-bar" class="password-progress-bar"></div>
                    </div>
                </div>
                <span asp-validation-for="NewPassword" class="input-error-message"></span>
            </div>

            <div class="form-group">
                <div class="input-with-icon">
                    <i class="fas fa-lock"></i>
                    <input type="password" asp-for="ConfirmNewPassword" placeholder="Confirm the new password" required>
                </div>
                <span asp-validation-for="ConfirmNewPassword" class="input-error-message"></span>
            </div>

            <button type="submit" class="sign-in-btn">Change it</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
    <partial name="_NotificationPartial"></partial>
}