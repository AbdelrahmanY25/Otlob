@model RegisterRequest

<link href="~/css/forms.css" rel="stylesheet" asp-append-version="true"/>
<link rel="stylesheet" href="~/css/becomeAParters.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/footer.css" asp-append-version="true" />

<div class="mainSection">
    <section class="hero-section">
        <section class="form-section">        
            <div class="text">
                <img src="~/Illustrations/Partnership-pana.svg"/>
                <h2>Join Our Restaurants Network</h2>
                <p>Partner with us to reach thousands of hungry customers and grow your business with our proven delivery platform</p>
            </div>

            <div class="right-panel">
                <div class="welcome-text">
                    <h1>Create Restaurant Admin Account</h1>
                </div>
                <form asp-action="BecomeAPartner" style="min-height: 540px">
					<div asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <div class="input-with-icon">
                            <i class="fas fa-user"></i>
                            <input type="text" asp-for="UserName" placeholder="Enter your username">
                        </div>
						<span asp-validation-for="UserName" class="input-error-message"></span>
                    </div>

                    <div class="form-group">
                        <div class="input-with-icon">
                            <i class="fas fa-envelope"></i>
                            <input type="email" asp-for="Email" placeholder="Enter your personal email">
                        </div>
						<span asp-validation-for="Email" class="input-error-message"></span>
                    </div>

                    <div class="form-group">
                        <div class="input-with-icon">
                            <i class="fas fa-lock"></i>
                            <input type="password" id="password" asp-for="Password" placeholder="Enter your password">
                        </div>
                        <div id="password-strength-meter" style="display: none;">
                            <div class="password-progress-container">
                                <div id="password-strength-bar" class="password-progress-bar"></div>
                            </div>
                        </div>
						<span asp-validation-for="Password" class="input-error-message"></span>
                    </div>

                    <div class="form-group">
                        <div class="input-with-icon">
                            <i class="fas fa-lock"></i>
                            <input type="password" asp-for="ConfirmPassword" placeholder="Confirm your password">
                        </div>
						<span asp-validation-for="ConfirmPassword" class="input-error-message"></span>
                    </div>

                    <div class="form-group">
                        <div class="input-with-icon">
                            <i class="fas fa-lock"></i>
                            <input asp-for="PhoneNumber" placeholder="Personal Mobile Number" />
                        </div>
						<span asp-validation-for="PhoneNumber" class="input-error-message"></span>
                    </div>

                    <button type="submit" class="sign-in-btn">Sign Up</button>
                </form>

                <span> or - <a asp-area="@DefaultRoles.Customer" asp-controller="" asp-action="">Continue your Registration</a></span>
            </div>
        </section>
    </section>

    <section class="benefits-section">
        <div class="container">
            <h2 class="benefits-title">Why you should <span>partner with us</span></h2>

            <div class="benefits-grid">
                <div class="benefit-card">
                    <div class="benefit-icon">🍕</div>
                    <h3>Reach more customers</h3>
                    <p>We have thousands of hungry customers in your area waiting to order from you and we'll help you deliver their food faster.</p>
                </div>

                <div class="benefit-card">
                    <div class="benefit-icon">💰</div>
                    <h3>Earn more money</h3>
                    <p>We'll help you serve more hungry customers without adding more chairs to your restaurant and we'll make sure you get paid promptly.</p>
                </div>

                <div class="benefit-card">
                    <div class="benefit-icon">📈</div>
                    <h3>Grow your business</h3>
                    <p>Increase sales, reach more customers or market your business better. We deliver ways to grow your business because when you succeed, we do too.</p>
                </div>
            </div>
        </div>
    </section>

    <div class="container">
        <section class="process-section">
                <h2 class="process-title">How we'll <span>work together</span></h2>

                <div class="process-steps">
                    <div class="process-step">
                        <div class="step-icon">📱</div>
                        <h4>The Customer Orders</h4>
                        <p>The customer places an order through the <span style="color: var(--primary-color)"><b>otlob</b></span> app.</p>
                    </div>

                    <div class="process-step">
                        <div class="step-icon">👨‍🍳</div>
                        <h4>You Prepare</h4>
                        <p>You will receive a notification to start preparing the order.</p>
                    </div>

                    <div class="process-step">
                        <div class="step-icon">🛵</div>
                        <h4>You Deliver</h4>
                        <p>pick up the order and deliver it to the customer.</p>
                    </div>

                    <div class="process-step">
                        <div class="step-icon">📊</div>
                        <h4>Watch Your Business Grow</h4>
                        <p>Track your sales, monitor orders, invest in marketing and more in your personal restaurant portal.</p>
                    </div>
                </div>
        </section>
    </div>

    <partial name="_footerPartial"></partial>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
    <partial name="_NotificationPartial"></partial>
}