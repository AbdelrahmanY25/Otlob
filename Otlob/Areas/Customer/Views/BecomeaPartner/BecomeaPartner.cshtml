@model RegisterRequest

<link href="~/css/forms.css" rel="stylesheet" asp-append-version="true"/>
<link rel="stylesheet" href="~/css/becomeAParters.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/footer.css" asp-append-version="true" />

<div class="mainSection">
    <!-- HERO & REGISTRATION -->
    <section class="hero-section">
        <section class="form-section">        
            <div class="text">
                <h2>Join Our Restaurant Network</h2>
                <p>Partner with Otlob to reach thousands of new customers. We handle the delivery, so you can focus on cooking the best food.</p>
            </div>

            <div class="right-panel">
                <div class="welcome-text">
                    <h1>Create Partner Account</h1>
                    <p>Start your journey with us today</p>
                </div>
                <form asp-action="BecomeAPartner">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-group">
                        <div class="input-with-icon">
                            <i class="fas fa-user"></i>
                            <input type="text" asp-for="UserName" placeholder="Username">
                        </div>
						<span asp-validation-for="UserName" class="input-error-message"></span>
                    </div>

                    <div class="form-group">
                        <div class="input-with-icon">
                            <i class="fas fa-envelope"></i>
                            <input type="email" asp-for="Email" placeholder="Business Email Address">
                        </div>
						<span asp-validation-for="Email" class="input-error-message"></span>
                    </div>

                    <div class="form-group">
                        <div class="input-with-icon">
                            <i class="fas fa-lock"></i>
                            <input type="password" id="password" asp-for="Password" placeholder="Create Password">
                        </div>
                        <div id="password-strength-meter">
                            <div class="password-progress-container">
                                <div id="password-strength-bar" class="password-progress-bar"></div>
                            </div>
                        </div>
						<span asp-validation-for="Password" class="input-error-message"></span>
                    </div>

                    <div class="form-group">
                        <div class="input-with-icon">
                            <i class="fas fa-lock"></i>
                            <input type="password" asp-for="ConfirmPassword" placeholder="Confirm Password">
                        </div>
						<span asp-validation-for="ConfirmPassword" class="input-error-message"></span>
                    </div>

                    <div class="form-group">
                        <div class="input-with-icon">
                            <i class="fas fa-mobile-alt"></i>
                            <input asp-for="PhoneNumber" placeholder="Mobile Number" />
                        </div>
						<span asp-validation-for="PhoneNumber" class="input-error-message"></span>
                    </div>

                    <button type="submit" class="sign-in-btn">Create Account</button>
                    
                    <div class="form-footer-links">
                        Already have an account? <a asp-area="@DefaultRoles.Customer" asp-controller="Account" asp-action="Login">Login here</a>
                    </div>
                </form>
            </div>
        </section>
    </section>

    <!-- BENEFITS SECTION -->
    <section class="benefits-section">
        <div class="container">
            <h2 class="benefits-title">Why Partner with <span>Otlob</span>?</h2>

            <div class="benefits-grid">
                <div class="benefit-card">
                    <div class="benefit-icon"><i class="fas fa-users"></i></div>
                    <h3>Reach More Customers</h3>
                    <p>Access thousands of new customers in your area who are looking for food delivery.</p>
                </div>

                <div class="benefit-card">
                    <div class="benefit-icon"><i class="fas fa-chart-line"></i></div>
                    <h3>Increase Revenue</h3>
                    <p>Boost your sales without increasing your dining room size. We handle the logistics.</p>
                </div>

                <div class="benefit-card">
                    <div class="benefit-icon"><i class="fas fa-bullhorn"></i></div>
                    <h3>Marketing Tools</h3>
                    <p>Get access to powerful marketing tools to promote your restaurant and offers.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- PROCESS SECTION -->
    <div class="container">
        <section class="process-section">
                <h2 class="process-title">How It <span>Works</span></h2>

                <div class="process-steps">
                    <div class="process-step">
                        <div class="step-icon"><i class="fas fa-mobile-alt"></i></div>
                        <h4>1. Customer Orders</h4>
                        <p>A customer places an order via the Otlob app.</p>
                    </div>

                    <div class="process-step">
                        <div class="step-icon"><i class="fas fa-utensils"></i></div>
                        <h4>2. You Prepare</h4>
                        <p>You accept and prepare the order in your kitchen.</p>
                    </div>

                    <div class="process-step">
                        <div class="step-icon"><i class="fas fa-motorcycle"></i></div>
                        <h4>3. We Deliver</h4>
                        <p>Our rider picks up the order and delivers it fast.</p>
                    </div>

                    <div class="process-step">
                        <div class="step-icon"><i class="fas fa-smile"></i></div>
                        <h4>4. Grow</h4>
                        <p>Track your success and watch your business grow.</p>
                    </div>
                </div>
        </section>
    </div>

    <partial name="_footerPartial"></partial>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
    <partial name="_NotificationPartial"></partial>
}