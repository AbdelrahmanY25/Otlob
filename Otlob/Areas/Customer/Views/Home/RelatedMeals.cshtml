@inject UserManager<ApplicationUser> userManager;

@using Microsoft.AspNetCore.Identity
@using Otlob.Core.Models
@model IEnumerable<OrderedMeals>


<div class="card shadow border-0">
    <div class="card-header bg-secondary bg-gradient text-light ml-0 py-4">
        <div class="row px-4">
            <div class="col-6">
                <h5 class="pt-2 text-white">
                    Shopping Cart
                </h5>
            </div>

        </div>
    </div>
    <div class="card-body my-4">
        <div class="row">
        </div>

        <div class="row mb-3 pb-3">
            <div class="col-md-2 offset-md-1">
                <a asp-action="Cart" asp-controller="Home" class="btn btn-outline-primary text-uppercase mb-5 btn-sm"><small>Back to cart</small></a>
            </div>

            @foreach (var res in Model)
            {
                if (res.Cart.UserId == userManager.GetUserId(User))
                {
                    <div class="col-md-10 offset-md-1">
                        <div class="row border-bottom pb-3">
                            <div class="d-none d-lg-block col-lg-1 text-center py-2">
                                <img src="~/images/meals/@res.Meal.ImageUrl" class="rounded" width="100%" />
                            </div>
                            <div class="col-12 col-lg-6 pt-md-3">
                                <h5 class="text-uppercase text-secondary"><strong>@res.MealName</strong></h5>
                                <p><small>@res.MealDescription</small></p>
                            </div>

                            <div class="col-12  col-lg-5 text-center row">
                                <div class="col-3 text-md-right pt-2 pt-md-4">
                                    <h6 class="fw-semibold">
                                        @res.Meal.Price
                                        <span class="text-muted">&nbsp;x&nbsp;</span>@res.Quantity
                                        <br />
                                        <span class="text-muted">= </span>@(res.Quantity * res.Meal.Price + " L.E")
                                    </h6>
                                </div>
                                <div class="col-6 col-sm-4 col-lg-6 pt-2">
                                    <div class="w-75 btn-group" role="group">
                                        <a class="btn btn-outline-primary bg-gradient py-2" asp-controller="" asp-action="Increase" asp-route-mealId="@res.MealId" asp-route-cartId="@res.CartId">
                                            <i class="fa-solid fa-plus"></i>
                                        </a> &nbsp;
                                        <a class="btn btn-outline-primary bg-gradient py-2" asp-controller="" asp-action="Decrease" asp-route-mealId="@res.MealId" asp-route-cartId="@res.CartId">
                                            <i class="fa-solid fa-minus"></i>
                                        </a>
                                    </div>

                                </div>
                                <div class="col-3 col-sm-4 col-lg-2 offset-lg-1 text-right pt-2">
                                    <a class="btn btn-danger bg-gradient py-2" asp-controller="" asp-action="Delete" asp-route-mealId="@res.MealId" asp-route-cartId="@res.CartId">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>               
                }
            }
        </div>
</div>
